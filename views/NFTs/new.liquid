{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/nfts" method="POST">
            <fieldset>
                <legend>Upload New NFT</legend>
                <label class="form-label">Name: </label>
                <input 
                    type="text" 
                    name="name" 
                    placeholder="Enter NFT Name"
                    class="form-control"
                >
                <label class="form-label">Price:</label>
                <input 
                    type="number"
                    name="price" 
                    placeholder="Enter Price in ETH" 
                    class="form-control"
                >
                <label class="form-label">Image URL:</label>
                <input 
                    type="img"
                    name="image"
                    placeholder="Enter Image URL"
                    class="form-control"
                >
                <label class="form-label">Scarcity Score:</label>
                <input 
                    type="number"
                    name="scarcityScore" 
                    placeholder="Enter Scarcity Score" 
                    class="form-control"
                >
            </fieldset>
            <br>
            <input 
                type="submit" 
                value="Upload New NFT"
                class="btn btn-success"
            >
        </form>
    </div>
{% endblock %}